{
  "version": 2,
  "builds": [
    {
      "src": "src/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/src/index.html"
    },
    {
      "source": "/mission",
      "destination": "/src/mission.html"
    },
    {
      "source": "/waitlist",
      "destination": "/src/waitlist.html"
    }
  ]
}
